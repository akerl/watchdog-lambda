name 'watchdog-lambda'
org 'akerl'

source(
  type: 'git',
  path: '.'
)

build do
  run 'make local'
  run 'cp ./bin/watchdog-lambda_linux_arm64 ./bootstrap'
  run 'zip payload.zip ./bootstrap'
  cp 'payload.zip'
end

package(
  type: 'file',
  artifacts: [
    {
      source: 'payload.zip',
      name: 'payload.zip'
    }
  ]
)

